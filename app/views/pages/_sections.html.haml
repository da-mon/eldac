
%div
  .panel.panel-default
    .panel-body
      = form_for [@page, @section], html: { class: 'form-inline' } do
        %input{ type: :hidden, id: :form_id, value: @form.id }
        %input{ type: :hidden, id: :page_id, value: @page.id }
        - if @section.errors[:name].empty?
          .form-group
            %input.form-control#name{ name: :name, placeholder: 'Name', type: :text, value: @section.name }
            %button.btn.btn-success{ type: :submit }
              #{sg 'share-alt'} Create New Section
          %p
            &nbsp;
        - else
          .form-group.has-error.has-feedback
            %input.form-control#name{ 'aria-describedby' => 'nameErrorStatus', name: :name, placeholder: 'Name', type: :text,
                                      value: @section.name }
            %span.glyphicon.glyphicon-remove.form-control-feedback{ 'aria-hidden' => true }
          \&#160;
          %button.btn.btn-success{ type: :submit }
            #{sg 'share-alt'} Create New Section
          %span.sr-only#nameErrorStatus (error)
          %span.help-block= @section.errors[:name].first

      - unless @sections.count.zero?
        %table.table.table-condensed.table-hover.table-bordered.table-striped#sort_sections
          %thead
            %tr
              %th{ colspan: 3 } Section
          %tbody
            - @sections.each do |s|
              %tr.hand{ id: "s_#{s.id}" }
                %td.middle
                  = raw(" &nbsp;#{sg 'sort'} &nbsp;#{s.name}")
                %td.tight= link_to raw("#{sg 'pencil'} &nbsp;Edit"), 'javascript:;', id: "section_#{s.id}", type: :button,
                                    class: 'btn btn-sm btn-warning'
                %td.tight= link_to raw("#{sg 'remove'} &nbsp;Delete"), 'javascript:;', id: "ad_section_#{s.id}", type: :button,
                                    class: 'btn btn-sm btn-danger'
