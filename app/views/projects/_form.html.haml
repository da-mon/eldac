
- if @project.errors[:name].empty?
  .form-group
    %label.control-label{for: :name} Name
    %input.form-control{type: :text, id: :name, name: :name, placeholder: 'Name', value: @project.try(:name)}
- else
  .form-group.has-error.has-feedback
    %label.control-label{for: :name} Name
    %input#name.form-control{"aria-describedby" => "nameErrorStatus", :name => "name", :placeholder => "Name", :type => "text", :value => @project.name}
    %span.glyphicon.glyphicon-remove.form-control-feedback{"aria-hidden" => "true"}
    %span#nameErrorStatus.sr-only (error)
    %span.help-block= @project.errors[:name].first
