.h3.page-header.hidden-xs
  = link_to 'Projects', projects_path
  = dl
  Edit Project
.panel.panel-default
  .panel-heading
    .h3.panel-title Project Info
  .panel-body
    = form_for @project, method: :put do
      = render 'form'
      .form-group
        %button.btn.btn-success{ type: :submit }
          = sg('pencil')
          &nbsp;Update Project
  /.panel.panel-default
  /= render 'projects/forms'
