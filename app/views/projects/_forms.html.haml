
%div
  .panel.panel-default
    .panel-body
      = form_for [@project, @form], html: { class: 'form-inline' } do
        - if @form.errors[:name].empty?
          .form-group
            %input.form-control#name{ name: :name, placeholder: 'Name', type: :text, value: @form.name }
            %button.btn.btn-success{ type: :submit }
              #{sg 'share-alt'} Create New Form
          %p
            &nbsp;
        - else
          .form-group.has-error.has-feedback
            %input.form-control#name{ 'aria-describedby' => 'nameErrorStatus', name: :name, placeholder: 'Name', type: :text,
                                      value: @form.name }
            %span.glyphicon.glyphicon-remove.form-control-feedback{ 'aria-hidden' => true }
          \&#160;
          %button.btn.btn-success{ type: :submit }
            #{sg 'share-alt'} Create New Folder
          %span.sr-only#nameErrorStatus (error)
          %span.help-block= @form.errors[:name].first

      - unless @forms.count.zero?
        %table.table.table-condensed.table-hover.table-bordered.table-striped#sort_forms
          %thead
            %tr
              %th{ colspan: 3 } Form
          %tbody
            - @forms.each do |f|
              %tr.hand{ id: "f_#{f.id}" }
                %td.middle
                  = raw(" &nbsp;#{sg 'sort'} &nbsp;#{f.name}")
                %td.tight= link_to raw("#{sg 'pencil'} &nbsp;Edit"), 'javascript:;', id: "f_#{f.id}", type: :button,
                                    class: 'btn btn-sm btn-warning'
                %td.tight= link_to raw("#{sg 'remove'} &nbsp;Delete"), 'javascript:;', id: "adf_#{f.id}", type: :button,
                                    class: 'btn btn-sm btn-danger'
