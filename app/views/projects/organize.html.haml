
%h3.page-header.hidden-xs
  = link_to 'Projects', projects_path
  = dl
  Organize Projects

%div
  .row
    .col-md-6
      = render 'projects/folders'
    .col-md-6
      - unless @folders.count.zero?
        = render 'projects/projects'

- if params[:show].present?
  - if params[:show] == 'edit_folder'
    :javascript
      $( function(){ editFolder(#{params[:id]}) } );
